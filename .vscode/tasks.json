{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker: build builder image",
      "type": "shell",
      "command": "docker build -t openautoflutter-builder .",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "docker: flutter build linux (example)",
      "type": "shell",
      "command": "docker run --rm -t -v \"${workspaceFolder}:/workspace\" -w /workspace/example openautoflutter-builder flutter build linux -v",
      "dependsOn": "docker: build builder image",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}